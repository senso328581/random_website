<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>Theme Selector</title>
  <style>
    /* Default */
    :root[data-theme="default"] body {
      background: #1e1e1e; /* 動画フレーム解析より */
    }

    /* JavaScript */
    :root[data-theme="javascript"] body {
      background: #f7df1e; /* stylesheets/javascript.css 定義 */
    }

    /* Gaming CSS */
    :root[data-theme="gaming-css"] body {
      background: #1e1e2e; /* stylesheets/gaming-css.css 定義 */
    }

    /* CSS Wave Gaming */
    :root[data-theme="gaming-css-wave"] body {
      background: #0f172a; /* stylesheets/gaming-css-wave.css 定義 */
    }

    /* Input Field Gaming */
    :root[data-theme="gaming-input-field"] body {
      background: #111827; /* stylesheets/gaming-input-field.css 定義 */
    }

    /* 共通スタイル */
    body {
      margin: 0;
      padding: 1rem;
      font-family: sans-serif;
      color: #fff;
      transition: background 0.3s;
    }

    label {
      display: block;
      margin: 1rem 0 0.5rem;
    }

    select, textarea {
      width: 100%;
      max-width: 400px;
      padding: 0.5rem;
      font-size: 1rem;
      box-sizing: border-box;
      background: rgba(255,255,255,0.1);
      color: inherit;
      border: 1px solid rgba(255,255,255,0.4);
      border-radius: 4px;
      transition: background 0.3s, border-color 0.3s;
      backdrop-filter: blur(4px);
    }

    textarea { resize: vertical; }
    select { appearance: none; }
  </style>
</head>
<body data-theme="default">
  <label for="theme-select">Select Theme:</label>
  <select id="theme-select">
    <option value="default">Default</option>
    <option value="javascript">JavaScript</option>
    <option value="gaming-css">Gaming CSS</option>
    <option value="gaming-css-wave">CSS Wave Gaming</option>
    <option value="gaming-input-field">Input Field Gaming</option>
  </select>

  <label for="content">Content:</label>
  <textarea id="content" rows="5" placeholder="ここにメッセージを入力"></textarea>

  <script>
    document.getElementById('theme-select').addEventListener('change', function() {
      document.documentElement.setAttribute('data-theme', this.value);
    });
  </script>
</body>
</html>
